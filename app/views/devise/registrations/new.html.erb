<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <% if params[:plan] == '1' %>
      <h2>Basic Plan</h2>
    <% else %>
      <h2>Pro Plan</h2>
    <% end %>
  </div>
  
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <h2>Sign up</h2>
      
      <% if params[:plan] == '1' %>
        <%= render "basic_form" %>
      <% else %>
        <%= render "pro_form" %>
      <% end %>

      <%= render "devise/shared/links" %>
      </div>
    </div>
</div>